extends layout

block content
  body    
    #myOverlay.w3-overlay.w3-hide-large(onclick='w3_close()', style='cursor:pointer', title='close side menu')
    .w3-main(style='margin-left:250px')
      .w3-row.w3-padding-16
        .w3-twothird.w3-container
          h1.w3-text-teal Call Logs
          form#formAddContact(name="addcalllog",method="post",action="/call-log")
            div(style="display: inline-block; margin: 5px; width: 400px")
              div
                label Subject
                input#inputSubject(type="text", name="subject", style="margin: 5px")
              div
                label Contact Name
                input#inputSubject(type="text", name="name", style="margin: 5px")
              div
                label Comments
                input#inputSubject(type="text", name="comments", style="margin: 5px")
            div
              button(type="submit") Add
          div
            p TODO: Should list all call logs. 
      .w3-row.w3-padding-16
        .w3-twothird.w3-container
          h1.w3-text-teal Call Logs List
          div
            table
              thead
                tr 
                  th Subject
                  th Name
                  th Comments
              tbody
                each log, i in callLogs
                  tr
                    td
                      label= log.subject
                    td
                      label= log.name
                    td
                      label= log.comments
                    