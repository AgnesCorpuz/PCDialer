extends layout

block content
  div#myBody
    .w3-row.w3-padding-16
      .w3-twothird.w3-container
        h1.w3-text-deep-orange Create Campaign
        div(style="display: inline-block; margin: 5px; width: 800px")
          div
            label= "Campaign Name: "
            input#campaignName(type="text", placeholder="Campaign Name", style="margin: 5px")
          div
            label= "Contact List: "
            select#contactList
              each contactList, i in contactLists
                option= contactList
          div
            label= "Queue"
            select#outBoundQueue
              each queue, i in queues
                option= queue
          div
            label= "Caller Name: "
            input#callerName(type="text", placeholder="Caller Name", style="margin: 5px")
          div
            label= "Caller Address: "
            input#callerAddress(type="text", placeholder="Caller Address", style="margin: 5px")
          div
            button#btnSubmit(onclick="createCampaign()", style="margin: 5px; margin-left: 380px") Add
